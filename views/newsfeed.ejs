<!doctype html>
<html>
<head>
    <title>LinkUp</title>
    <link rel="shortcut icon" href="linkup.png">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="font-awesome.min.css">
    <script src="https://kit.fontawesome.com/9758b9c0d3.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="style3.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa-solid fa-newspaper"></span>NewsFeed</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        <a href="/dashboard" class="btn btn-default btn-sm">Home</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
         <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa-solid fa-user-secret"></span> User Info</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                    </p>

                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>

        <div class="col-sm-6">
          <h3>My Posts</h3>
          <ul class="messages">
          <% for(var i=0; i<myMessages.length; i++) {%>
            <li class="message">
              <span><%= myMessages[i].name %></span>
              <span><%= myMessages[i].msg %></span>
              <span><%= myMessages[i].thumbUp %></span>
              <span><i class="fa-solid fa-link" aria-hidden="true"></i></span>
              <span><i class="fa-solid fa-dumpster-fire" aria-hidden="true"></i></span>
            </li>
          <% } %>
          </ul>

        <div class="col-sm-6">
          <h3>All Posts</h3>
          <h2>Most recent msg: <%= lastDoc.msg %> </h2>
          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message">
              <span><%= messages[i].name %></span>
              <span><%= messages[i].msg %></span>
              <span><%= messages[i].thumbUp %></span>
              <span><i class="fa-solid fa-link" aria-hidden="true"></i></span>
              <span><i class= "fa-solid fa-dumpster-fire" aria-hidden="true"></i></span>
            </li>
          <% } %>
          </ul>

          <h2>Add a post</h2>
        <% if (user.local.email) { %>
          <form action="/addMessages" method="POST">
            <input type="text" value="<%= user.local.email %>" name="name">
            <input type="text" placeholder="message" name="msg">
            <button type="submit">Submit</button>
          </form>
        </div>
        <% } %>

</div>

<script src="main.js"></script>

</body>
</html>
